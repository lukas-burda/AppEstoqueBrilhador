@page
@model AppEstoqueBrilhador.Pages.Provider.EditModel

@{
    ViewData["Title"] = "Editar";
}

<style>
    .btn-primary {
        background-color: #343a40 !important;
    }
</style>

<h1>Editar</h1>

<h4>Fornecedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProviderX.id" />
            <div class="form-group">
                <label asp-for="ProviderX.cnpj" class="control-label"></label>
                <input asp-for="ProviderX.cnpj" class="form-control" />
                <span asp-validation-for="ProviderX.cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderX.nomeFantasia" class="control-label"></label>
                <input asp-for="ProviderX.nomeFantasia" class="form-control" />
                <span asp-validation-for="ProviderX.nomeFantasia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderX.endereco" class="control-label"></label>
                <input asp-for="ProviderX.endereco" class="form-control" />
                <span asp-validation-for="ProviderX.endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderX.telefone" class="control-label"></label>
                <input asp-for="ProviderX.telefone" class="form-control" />
                <span asp-validation-for="ProviderX.telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="Index" role="button">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
