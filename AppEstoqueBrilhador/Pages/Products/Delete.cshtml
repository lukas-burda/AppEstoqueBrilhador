@page
@model AppEstoqueBrilhador.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Deletar";
}

<style>
    .btn-primary {
        background-color: #343a40 !important;
    }
</style>

<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProviderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProviderId)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Delete" class="btn btn-danger text-light" />
        <a class="btn btn-primary text-light" asp-page="Index" role="button">Voltar</a>
    </form>
</div>
