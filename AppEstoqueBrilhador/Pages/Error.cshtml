@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Erro.</h1>
<h2 class="text-danger">Um erro ocorreu ao processar sua requisição.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Requisição ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>Alguma coisa deu ruim.</h3>
<p>
    Analise o <strong>Log de eventos</strong>.
</p>
<p>
    <strong>Dê um restart no app.</strong>
</p>
